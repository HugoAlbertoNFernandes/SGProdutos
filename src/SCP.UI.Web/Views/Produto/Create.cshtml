@model SGP.AplicationCore.Entity.Produto

@{
    ViewData["Title"] = "Create";
}

@*<h1>Create</h1>*@

<h4>Novo Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorias.Descricao" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias,"CategoriaId","Descricao"))"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <p><h2 style="color:red;">@ViewBag.Erro</h2></p>
            </div>
        </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Voltar para Lista Lista de Produtos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
