@model IEnumerable<SGP.AplicationCore.Entity.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Produtos</h1>

<p>
    <a asp-action="Create">Novo Produto</a>
</p>

@using (Html.BeginForm())
{
    <div class="row" style="margin-top: 20px">
        <p><label>Pesquisa: <input type="text" name="searchString" />&nbsp;</label></p>
        <p><input type="submit" value="Pesquisar" class="btn btn-primary" /></p>
    </div>
}


<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.ProdutoId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CategoriaId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Categorias.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProdutoId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorias.Descricao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ProdutoId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ProdutoId }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.ProdutoId })
                </td>
            </tr>
        }
    </tbody>
</table>
